
echo "Combien d'étoiles ?" 
read -r value 
for (( j=0 ; j<$value ; j++ )); do
for (( k=0 ; k<($value-j) ; k++ )); do 
    echo -n "+"  
done 
for (( i=0 ; i<(j+1) ; i++ )); do 
    echo -n "*"  
done 
echo
done

#!/bin/bash 
echo "Combien d'étoiles ?" 
read -r value 
for (( j=0 ; j<$value ; j++ )); do
for (( k=0 ; k<($value-j) ; k++ )); do 
    echo -n " "  
done 
for (( i=0 ; i<(j+1) ; i++ )); do 
    echo -n "*"  
done 
echo
done
